{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build main.c",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build && clang -g -Wall -Wextra -std=c11 main.c -o build/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build CPU/run.c",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build && clang -g -Wall -Wextra -std=c11 CPU/run.c CPU/server.c CPU/switch.c -o build/cpu-run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
